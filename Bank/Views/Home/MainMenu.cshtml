}


@using (Html.BeginForm("AddMoney", "Home"))
{
    @Html.Hidden("UserName")
    @Html.Hidden("UserID")
    ;
    <table>
        <tr>
            <td>
                @Html.DropDownList("SelectedAccount", (SelectList)ViewBag.data)
            </td>
            <td>  Amount: </td>
            <td>
                <input type="number" id="Amount" name="Amount" value="0" />
            </td>
            <td> <input type='submit' value='Add Money' /> </td>
